{
    "name": "sailplanner.nl",
    "version": "0.0.1",
    "description": "Sailplanner app UI",
    "repository": {
        "type": "git",
        "url": "git://github.com/jieter/sailplanner.nl"
    },
    "license": "MIT",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "php": "php -S 127.0.0.1:8000 -t public/",
        "start": "sirv public",
        "eslint": "eslint src/ test/",
        "test": "mocha -r esm",
        "publish": "npm run build && rsync -a public/ jieter@jieter.nl:/srv/www/sailplanner.nl/htdocs/beta"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^12.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "eslint": "^7.8.1",
        "eslint-plugin-svelte3": "^2.7.3",
        "esm": "^3.2.25",
        "mocha": "^8.1.3",
        "node-fetch": "^2.6.1",
        "rollup": "^2.26.11",
        "rollup-plugin-analyzer": "^3.3.0",
        "rollup-plugin-css-only": "^2.1.0",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^5.3.1",
        "sirv-cli": "^0.4.4",
        "svelte": "^3.24.1"
    },
    "dependencies": {
        "dompurify": "^2.0.15",
        "leaflet": "^1.7.1",
        "leaflet-editable": "^1.2.0",
        "marked": "^1.1.1",
        "polyline-encoded": "0.0.9"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "plugins": [
            "svelte3"
        ],
        "overrides": [{
            "files": [
                "*.svelte"
            ],
            "processor": "svelte3/svelte3"
        }],
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ]
        }
    }
}