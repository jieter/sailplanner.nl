{
    "name": "sailplanner.nl",
    "version": "0.0.1",
    "description": "Sailplanner app UI",
    "repository": {
        "type": "git",
        "url": "git://github.com/jieter/sailplanner.nl"
    },
    "license": "MIT",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "php -S 127.0.0.1:8000 -t public/",
        "eslint": "eslint src/ test/",
        "format": "prettier --write --plugin-search-dir=. src/ test/ wdio/",
        "test": "npm run spec",
        "spec": "mocha -r esm",
        "publish": "npm run build && rsync  -e \"ssh -o StrictHostKeyChecking=no\" -a public/ jieter@jieter.nl:/srv/www/sailplanner.nl/htdocs/beta",
        "interaction": "wdio run wdio/wdio.conf.js"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@wdio/cli": "^7.5.3",
        "@wdio/local-runner": "^7.5.4",
        "@wdio/mocha-framework": "^7.5.3",
        "@wdio/spec-reporter": "^7.5.3",
        "chromedriver": "^90.0.0",
        "eslint": "^7.25.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "esm": "^3.2.25",
        "mocha": "^8.3.2",
        "node-fetch": "^2.6.7",
        "prettier": "^2.2.1",
        "prettier-plugin-svelte": "^2.2.0",
        "rollup": "^2.46.0",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "sirv-cli": "^1.0.11",
        "svelte": "^3.49.0",
        "wdio-chromedriver-service": "^7.0.0"
    },
    "dependencies": {
        "dompurify": "^2.2.8",
        "leaflet": "^1.7.1",
        "leaflet-editable": "^1.2.0",
        "marked": "^2.0.3",
        "polyline-encoded": "0.0.9"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2019,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true
        },
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "semi": [
                "error",
                "always"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ]
        }
    }
}
